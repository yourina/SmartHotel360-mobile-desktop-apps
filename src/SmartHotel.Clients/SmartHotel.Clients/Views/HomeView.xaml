<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Name="Self"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SmartHotel.Clients.Core.Views.HomeView" 
    xmlns:ctrls="clr-namespace:SmartHotel.Clients.Core.Controls;assembly=SmartHotel.Clients.Core"
    xmlns:carousel="clr-namespace:CarouselView.FormsPlugin.Abstractions;assembly=CarouselView.FormsPlugin.Abstractions"
    xmlns:templates="clr-namespace:SmartHotel.Clients.Core.Views.Templates;assembly=SmartHotel.Clients.Core"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:controls="clr-namespace:SmartHotel.Clients.Core.Controls;assembly=SmartHotel.Clients.Core"     
    xmlns:extensions="clr-namespace:SmartHotel.Clients.Core.MarkupExtensions"
    xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms" 
    BackgroundColor="{StaticResource BackgroundColor}">
    <ContentPage.Resources>
        <ResourceDictionary>

            <Style x:Key="BookTextStyle" 
                   TargetType="Label"
                   BasedOn="{StaticResource PoppinsMediumLabelStyle}">
                <Setter Property="TextColor" Value="{StaticResource WhiteColor}" />
                <Setter Property="FontSize" Value="{StaticResource LittleSize}" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="Margin" Value="24, 0" />
            </Style>

            <Style x:Key="BookConferenceTextStyle" 
                   TargetType="Label" 
                   BasedOn="{StaticResource BookTextStyle}">
                <Setter Property="TextColor" Value="{StaticResource WhiteColor}" />
            </Style>

            <OnPlatform x:Key="ChartTextSize"
                        x:TypeArguments="x:Double">
                <On Platform="Tizen">
                    <OnIdiom x:TypeArguments="x:Double"
                             Phone="10" 
                             Tablet="10" 
                             TV="50" />
                </On>
                <On Platform="Android" Value="10" />
                <On Platform="UWP" Value="11" />
            </OnPlatform>
            
            <Style x:Key="ChartTextStyle" 
                   TargetType="Label"
                   BasedOn="{StaticResource PoppinsSemiBoldLabelStyle}">
                <Setter Property="TextColor" Value="{StaticResource BlackTextColor}" />
                <Setter Property="FontSize" Value="{StaticResource ChartTextSize}" />
                <Setter Property="VerticalOptions" Value="Start" />
                <Setter Property="Margin" Value="16, 16, 0, 0" />
            </Style>

            <Style x:Key="BeGreenTextStyle" 
                   TargetType="Label"
                   BasedOn="{StaticResource ChartTextStyle}">
                <Setter Property="Margin" Value="16, 0, 0, 0" />
            </Style>

            <Style x:Key="SuggestionsTextStyle" 
                   TargetType="Label"
                   BasedOn="{StaticResource PoppinsMediumLabelStyle}">
                <Setter Property="TextColor" Value="{StaticResource OrangeColor}" />
                <Setter Property="FontSize" Value="{StaticResource LittleSize}" />
                <Setter Property="Margin" Value="16, 16, 0, 0" />
            </Style>

            <Style x:Key="RestaurantTextStyle" 
                   TargetType="Label"
                   BasedOn="{StaticResource PoppinsMediumLabelStyle}">
                <Setter Property="TextColor" Value="{StaticResource BlackTextColor}" />
                <Setter Property="FontSize" Value="{StaticResource LargeSize}" />
                <Setter Property="Margin" Value="16, 0" />
            </Style>

            <Style x:Key="RestaurantDetailTextStyle" 
                   TargetType="Label" 
                   BasedOn="{StaticResource RestaurantTextStyle}">
                <Setter Property="FontSize" 
                        Value="{StaticResource LittleSize}" />
                <Setter Property="FontFamily"
                    Value="{StaticResource FiraSansRegular}" />
            </Style>

            <Style x:Key="SeeAllTextStyle" 
                   TargetType="Label"
                   BasedOn="{StaticResource SuggestionsTextStyle}">
                <Setter Property="HorizontalTextAlignment" Value="End" />
                <Setter Property="Margin" Value="0, 16, 16, 0" />
            </Style>

            <Style x:Key="GoMyRoomPanelStyle" 
                   TargetType="Grid">
                <Setter Property="BackgroundColor" Value="{StaticResource OrangeColor}" />
                <Setter Property="HeightRequest" Value="60" />
                <Setter Property="VerticalOptions" Value="End" />
            </Style>

            <Style x:Key="GoMyRoomPanel2Style" 
                   TargetType="Grid"
                   BasedOn="{StaticResource GoMyRoomPanelStyle}">
                <Setter Property="HeightRequest">
                    <Setter.Value>
                        <OnIdiom x:TypeArguments="x:Double"
                            Phone="48" 
                            Tablet="48" 
                            TV="120" />
                    </Setter.Value>
                </Setter>
            </Style>

            <Color x:Key="BookConferencePanelColor">#378D93</Color>
            
            <Style x:Key="BookConferencePanelStyle" 
                   TargetType="Grid">
                <Setter Property="BackgroundColor" Value="{StaticResource BookConferencePanelColor}" />
                <Setter Property="HeightRequest" Value="60" />
                <Setter Property="VerticalOptions" Value="End" />
            </Style>

            <Style x:Key="BookConferencePanel2Style" 
                   TargetType="Grid"
                   BasedOn="{StaticResource BookConferencePanelStyle}">
                <Setter Property="HeightRequest">
                    <Setter.Value>
                        <OnIdiom x:TypeArguments="x:Double"
                            Phone="48" 
                            Tablet="48" 
                            TV="120" />
                    </Setter.Value>
                </Setter>
            </Style>
            
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem  
            Text="{extensions:Translate OpenDoor}"
            Command="{Binding OpenDoorCommand}">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="Tizen" Value="ic_card.png" />
                    <On Platform="Android, iOS" Value="ic_card" />
                    <On Platform="UWP" Value="Assets/ic_card.png" />
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid>
            <Grid   
                AutomationId="home"
                RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition>
                        <RowDefinition.Height>
                            <OnPlatform x:TypeArguments="GridLength">
                                <On Platform="Tizen">
                                    <OnIdiom x:TypeArguments="GridLength"
                                             Phone="4.6*"
                                             Tablet="4.6*"
                                             TV="3.6*"/>
                                </On>
                                <On Platform="Android, iOS" Value="4.6*" />
                                <On Platform="UWP" Value="4.6*" />
                            </OnPlatform>
                        </RowDefinition.Height>
                    </RowDefinition>
                    <RowDefinition Height="5.4*" />
                </Grid.RowDefinitions>
                <!-- CAROUSEL -->
                <Grid
                    Grid.Row="0">
                    <Image
                        Aspect="AspectFill">
                        <Image.Source>
                            <OnPlatform x:TypeArguments="ImageSource">
                                <On Platform="Tizen">
                                    <OnIdiom x:TypeArguments="ImageSource"
                                         Phone="hero_image.png" 
                                         Tablet="hero_image.png" 
                                         TV="tv/hero_image.png" />
                                </On>
                                <On Platform="Android, iOS" Value="hero_image.png" />
                                <On Platform="UWP" Value="Assets/hero_image.png" />
                            </OnPlatform>
                        </Image.Source>
                    </Image>
                    <carousel:CarouselViewControl 
                        x:Name="Carousel"
                        Orientation="Horizontal" 
                        InterPageSpacing="0" 
                        ShowIndicators="True"
                        ShowArrows="True"
                        CurrentPageIndicatorTintColor="{StaticResource WhiteColor}"
                        ItemsSource="{Binding Notifications, Mode=OneWay}">
                        <carousel:CarouselViewControl.ItemTemplate>
                            <DataTemplate>
                                <templates:NotificationItemTemplate 
                                    TapCommand="{Binding BindingContext.NotificationsCommand, Source={x:Reference Self}}" />
                            </DataTemplate>
                        </carousel:CarouselViewControl.ItemTemplate>
                    </carousel:CarouselViewControl>
                    <Image 
                        Margin="0, 30, 0, 12"
                        VerticalOptions="Start"
                        HorizontalOptions="Center"
                        HeightRequest="74"
                        Aspect="AspectFit">
                        <Image.Source>
                            <OnPlatform x:TypeArguments="ImageSource">
                                <On Platform="Tizen" Value="simbol_logo.png" />
                                <On Platform="Android, iOS" Value="simbol_logo" />
                                <On Platform="UWP" Value="Assets/simbol_logo.png" />
                            </OnPlatform>
                        </Image.Source>
                    </Image>
                </Grid>
                <!-- NO BOOKING -->
                <Grid
                    IsVisible="{Binding HasBooking, Converter={StaticResource InverseBoolConverter}}"
                    ColumnSpacing="0"
                    RowSpacing="0"
                    Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5.5*" />
                        <RowDefinition Height="4.5*" />
                    </Grid.RowDefinitions>
                    <!-- BOOK A ROOM -->
                    <Grid
                        Grid.Row="0"
                        Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="75*" />
                            <RowDefinition Height="25*" />
                        </Grid.RowDefinitions>
                        <ffimageloading:CachedImage 
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Aspect="AspectFill">
                            <ffimageloading:CachedImage.Source>
                                <OnPlatform x:TypeArguments="ImageSource">
                                    <On Platform="Tizen">
                                        <OnIdiom x:TypeArguments="ImageSource"
                                             Phone="img_1.png" 
                                             Tablet="img_1.png" 
                                             TV="tv/img_5.png" />
                                    </On>
                                    <On Platform="Android, iOS" Value="img_1" />
                                    <On Platform="UWP" Value="Assets/img_1.png" />
                                </OnPlatform>
                            </ffimageloading:CachedImage.Source>
                        </ffimageloading:CachedImage>
                        <Grid   
                            Grid.Row="1"
                            BackgroundColor="{StaticResource OrangeColor}">
                            <Label
                                Text="{extensions:Translate BookMayus}"
                                Style="{StaticResource BookTextStyle}"/>
                        </Grid>
                        <Button Grid.Row="0" Grid.RowSpan="2" BackgroundColor="LightGray" Opacity="0.0" x:Name="BookRoomButton" 
                                Command="{Binding BookRoomCommand}"/>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding BookRoomCommand}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                    <!-- BOOK CONFERENCE ROOM -->
                    <Grid
                        Grid.Row="0"
                        Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="75*" />
                            <RowDefinition Height="25*" />
                        </Grid.RowDefinitions>
                        <ffimageloading:CachedImage  
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Source="img_2" 
                            Aspect="AspectFill">
                            <ffimageloading:CachedImage.Source>
                                <OnPlatform x:TypeArguments="ImageSource">
                                    <On Platform="Tizen">
                                        <OnIdiom x:TypeArguments="ImageSource"
                                             Phone="img_2.png" 
                                             Tablet="img_2.png" 
                                             TV="tv/img_4.png" />
                                    </On>
                                    <On Platform="Android, iOS" Value="img_2" />
                                    <On Platform="UWP" Value="Assets/img_2.png" />
                                </OnPlatform>
                            </ffimageloading:CachedImage.Source>
                        </ffimageloading:CachedImage>
                        <Grid   
                            Grid.Row="1"
                            BackgroundColor="{StaticResource GreenColor}
                            ">
                            <Label
                                Text="BOOK A&#x0a;CONFERENCE ROOM"
                                Style="{StaticResource BookConferenceTextStyle}"/>
                        </Grid>
                        <Button Grid.Row="0" Grid.RowSpan="2" BackgroundColor="LightGray" Opacity="0.0" x:Name="BookConferenceButton" 
                                Command="{Binding BookConferenceCommand}"/>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding BookConferenceCommand}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                    <!-- RESTAURANT -->
                    <Grid
                        Grid.Row="1"
                        Grid.Column="0"
                        BackgroundColor="{StaticResource WhiteColor}"
                        Margin="0, 0, 0, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackLayout
                            x:Name="RestaurantTitle"
                            Grid.Column="0"
                            Grid.Row="0"
                            Orientation="Horizontal">
                            <Label
                                Text="{extensions:Translate Suggestions}"
                                Style="{StaticResource SuggestionsTextStyle}"/>
                            <Label   
                                Text="{extensions:Translate SeeAll}"
                                HorizontalOptions="EndAndExpand"
                                Style="{StaticResource SeeAllTextStyle}"/>
                        </StackLayout>
                        <StackLayout
                            x:Name="RestaurantContent"
                            Grid.Column="0"
                            Grid.Row="1">
                            <Label            
                                Text="{extensions:Translate Restaurant}"
                                Style="{StaticResource RestaurantTextStyle}"/>
                            <Label   
                                Text="{extensions:Translate EatToday}"
                                Style="{StaticResource RestaurantDetailTextStyle}"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding SuggestionsCommand}" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                        <Button Grid.Row="0" Grid.RowSpan="3" BackgroundColor="LightGray" Opacity="0.0" x:Name="BookRestaurantButton"
                                    Command="{Binding SuggestionsCommand}"/>
                        <ffimageloading:CachedImage  
                            x:Name="RestaurantImage"
                            Grid.Column="1"
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Aspect="AspectFill">
                            <ffimageloading:CachedImage.Source>
                                <OnPlatform x:TypeArguments="ImageSource">
                                    <On Platform="Tizen" Value="img_6.png" />
                                    <On Platform="Android, iOS" Value="img_3" />
                                    <On Platform="UWP" Value="Assets/img_6.png" />
                                </OnPlatform>
                            </ffimageloading:CachedImage.Source>
                        </ffimageloading:CachedImage>
                        <Grid   
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Grid.Row="2"
                            IsVisible="{Binding HasBooking}"
                            Style="{StaticResource GoMyRoomPanelStyle}">
                            <Label    
                                Text="{extensions:Translate GoMyRoomMayus}"
                                Style="{StaticResource BookTextStyle}"/>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding GoMyRoomCommand}" />
                            </Grid.GestureRecognizers>
                        </Grid>
                    </Grid>
                    <!-- MORE INFO -->
                    <Grid
                        Grid.Row="1"
                        Grid.Column="1"
                        BackgroundColor="{StaticResource WhiteColor}"
                        RowSpacing="0"
                        Margin="0, 0, 0, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackLayout
                            x:Name="MoreInfoTitle"
                            Grid.Column="0"
                            Grid.Row="0"
                            Orientation="Horizontal">
                            <Label
                                Text="{extensions:Translate Suggestions}"
                                Style="{StaticResource SuggestionsTextStyle}"/>
                            <Label   
                                Text="{extensions:Translate SeeAll}"
                                HorizontalOptions="EndAndExpand"
                                Style="{StaticResource SeeAllTextStyle}"/>
                        </StackLayout>
                        <StackLayout
                            x:Name="MoreInfoContent"
                            Grid.Column="0"
                            Grid.Row="1">
                            <Label            
                                Text="{extensions:Translate Activities}"
                                Style="{StaticResource RestaurantTextStyle}"/>
                            <Label   
                                Text="{extensions:Translate DoToday}"
                                Style="{StaticResource RestaurantDetailTextStyle}"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding SuggestionsCommand}" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                        <Button Grid.Row="0" Grid.RowSpan="3" BackgroundColor="LightGray" Opacity="0.0" x:Name="SuggestionsButton"
                                    Command="{Binding SuggestionsCommand}"/>
                        <ffimageloading:CachedImage  
                            x:Name="MoreInfoImage"
                            Grid.Column="1"
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Aspect="AspectFill">
                            <ffimageloading:CachedImage.Source>
                                <OnPlatform x:TypeArguments="ImageSource">
                                    <On Platform="Tizen" Value="img_3.png" />
                                    <On Platform="Android, iOS" Value="img_3" />
                                    <On Platform="UWP" Value="Assets/img_3.png" />
                                </OnPlatform>
                            </ffimageloading:CachedImage.Source>
                        </ffimageloading:CachedImage>
                        <Grid   
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Grid.Row="1"
                            IsVisible="{Binding HasBooking}"
                            Style="{StaticResource BookConferencePanelStyle}">
                            <Label      
                                Text="{extensions:Translate BookConferenceMayus}"
                                Style="{StaticResource BookTextStyle}"/>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding BookConferenceCommand}" />
                            </Grid.GestureRecognizers>
                        </Grid>
                    </Grid>
                </Grid>
                <!-- BOOKING -->
                <Grid
                    IsVisible="{Binding HasBooking}"
                    ColumnSpacing="0"
                    RowSpacing="0"
                    Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4.5*" />
                        <RowDefinition Height="5.5*" />
                    </Grid.RowDefinitions>
                    <!-- ROOM TEMPERATURE -->
                    <Grid
                        Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="{StaticResource GrayColor}">
                        <ffimageloading:CachedImage                                
                            Aspect="AspectFit"
                            VerticalOptions="End"
                            Margin="12, 24, 12, 12">
                            <ffimageloading:CachedImage.Source>
                                <OnPlatform x:TypeArguments="ImageSource">
                                    <On Platform="Tizen" Value="room_temperature.png" />
                                    <On Platform="Android, iOS" Value="room_temperature" />
                                    <On Platform="UWP" Value="Assets/room_temperature.png" />
                                </OnPlatform>
                            </ffimageloading:CachedImage.Source>
                        </ffimageloading:CachedImage>
                        <microcharts:ChartView 
                            Chart="{Binding TemperatureChart}"
                            VerticalOptions="End"
                            IsVisible="false" />
                        <Label  
                            Text="{extensions:Translate RoomTemperature}"
                            Style="{StaticResource ChartTextStyle}"/>
                    </Grid>
                    <!-- AMBIENT LIGHT -->
                    <Grid
                        Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="{StaticResource GrayColor}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <ffimageloading:CachedImage     
                            Grid.Row="0" 
                            Aspect="AspectFit"
                            Margin="16, 36, 16, 6">
                            <ffimageloading:CachedImage.Source>
                                <OnPlatform x:TypeArguments="ImageSource">
                                    <On Platform="Tizen" Value="ambient_light.png" />
                                    <On Platform="Android, iOS" Value="ambient_light" />
                                    <On Platform="UWP" Value="Assets/ambient_light.png" />
                                </OnPlatform>
                            </ffimageloading:CachedImage.Source>
                        </ffimageloading:CachedImage>
                        <Label     
                            Grid.Row="0"
                            Text="{extensions:Translate AmbientLight}"
                            Style="{StaticResource ChartTextStyle}"/>
                        <ffimageloading:CachedImage     
                            Grid.Row="1"
                            Aspect="AspectFit"
                            Margin="16, 12, 16, 6">
                            <ffimageloading:CachedImage.Source>
                                <OnPlatform x:TypeArguments="ImageSource">
                                    <On Platform="Tizen" Value="be_green.png" />
                                    <On Platform="Android, iOS" Value="be_green" />
                                    <On Platform="UWP" Value="Assets/be_green.png" />
                                </OnPlatform>
                            </ffimageloading:CachedImage.Source>
                        </ffimageloading:CachedImage>
                        <microcharts:ChartView    
                            Grid.Row="1"
                            Chart="{Binding GreenChart}"
                            VerticalOptions="End"
                            IsVisible="false" />
                        <Label     
                            Grid.Row="1"
                            Text="{extensions:Translate BeGreen}"
                            Style="{StaticResource BeGreenTextStyle}"/>
                    </Grid>
                    <!-- RESTAURANT -->
                    <Grid
                        Grid.Row="1"
                        Grid.Column="0"
                        BackgroundColor="{StaticResource WhiteColor}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="7*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackLayout
                            Grid.Row="0"
                            Orientation="Horizontal">
                            <Label
                                Text="{extensions:Translate Suggestions}"
                                Style="{StaticResource SuggestionsTextStyle}"/>
                            <Label   
                                Text="{extensions:Translate SeeAll}"
                                HorizontalOptions="EndAndExpand"
                                Style="{StaticResource SeeAllTextStyle}"/>
                        </StackLayout>
                        <StackLayout
                            Grid.Row="1">
                            <Label            
                                Text="{extensions:Translate Restaurant}"
                                Style="{StaticResource RestaurantTextStyle}"/>
                            <Label   
                                Text="{extensions:Translate EatToday}"
                                Style="{StaticResource RestaurantDetailTextStyle}"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding SuggestionsCommand}" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                        <Button Grid.Row="0"
                                Grid.RowSpan="2"
                                BackgroundColor="LightGray" 
                                Opacity="0.0"
                                x:Name="SuggestionsButtonInBooking"
                                Command="{Binding SuggestionsCommand}"/>
                        <Grid   
                            Grid.Row="2"
                            Style="{StaticResource GoMyRoomPanel2Style}">
                            <Label    
                                Text="{extensions:Translate GoMyRoomMayus}"
                                Style="{StaticResource BookTextStyle}"/>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding GoMyRoomCommand}" />
                            </Grid.GestureRecognizers>
                        </Grid>
                        <Button Grid.Row="2" 
                                BackgroundColor="LightGray" 
                                Opacity="0.0"
                                x:Name="GoMyRoomButton"
                                Command="{Binding GoMyRoomCommand}"/>

                    </Grid>
                    <!-- MORE INFO -->
                    <Grid
                        Grid.Row="1"
                        Grid.Column="1"
                        RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ffimageloading:CachedImage  
                            Grid.Row="0"
                            Aspect="AspectFill">
                            <ffimageloading:CachedImage.Source>
                                <OnPlatform x:TypeArguments="ImageSource">
                                    <On Platform="Tizen" Value="img_3.png" />
                                    <On Platform="Android, iOS" Value="img_3" />
                                    <On Platform="UWP" Value="Assets/img_3.png" />
                                </OnPlatform>
                            </ffimageloading:CachedImage.Source>
                        </ffimageloading:CachedImage>
                        <Grid   
                            Grid.Row="1"
                            Style="{StaticResource BookConferencePanel2Style}">
                            <Label      
                                Text="{extensions:Translate BookConferenceMayus}"
                                Style="{StaticResource BookTextStyle}"/>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding BookConferenceCommand}" />
                            </Grid.GestureRecognizers>
                        </Grid>
                        <Button Grid.Row="0" Grid.RowSpan="2" 
                                BackgroundColor="LightGray" Opacity="0.0" 
                                x:Name="BookConferenceButtonInBooking"
                                Command="{Binding BookConferenceCommand}"/>
                    </Grid>
                </Grid>
            </Grid>
            <ActivityIndicator 
                Color="{StaticResource AccentColor}"
                IsRunning="{Binding IsBusy}" 
                IsVisible="{Binding IsBusy}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>